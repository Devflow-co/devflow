{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": ["ts-jest", {
      "tsconfig": {
        "esModuleInterop": true
      }
    }]
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/../src/$1"
  },
  "setupFilesAfterEnv": ["<rootDir>/setup.ts"],
  "collectCoverageFrom": [
    "../src/**/*.ts",
    "!../src/**/*.spec.ts",
    "!../src/**/*.d.ts"
  ],
  "coverageDirectory": "../coverage-e2e",
  "testTimeout": 60000
}

