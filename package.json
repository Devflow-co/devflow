{
  "name": "devflow",
  "version": "1.0.0",
  "private": true,
  "description": "Universal DevOps orchestrator - Linear to Production automation",
  "keywords": [
    "devops",
    "automation",
    "orchestrator",
    "temporal",
    "nestjs",
    "ai"
  ],
  "author": "DevFlow Team",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "PORT=3001 pnpm --filter @devflow/api dev",
    "dev:api": "PORT=3001 pnpm --filter @devflow/api dev",
    "dev:worker": "pnpm --filter @devflow/worker dev",
    "dev:web": "pnpm --filter @devflow/web dev",
    "dev:backend": "concurrently -n api,worker -c cyan,magenta \"PORT=3001 pnpm --filter @devflow/api dev\" \"pnpm --filter @devflow/worker dev\"",
    "dev:all": "concurrently -n api,worker,web -c cyan,magenta,green \"PORT=3001 pnpm --filter @devflow/api dev\" \"pnpm --filter @devflow/worker dev\" \"pnpm --filter @devflow/web dev\"",
    "build": "pnpm -r build",
    "build:web": "pnpm --filter @devflow/web build",
    "build:api": "pnpm --filter @devflow/api build",
    "build:worker": "pnpm --filter @devflow/worker build",
    "build:sdk": "pnpm --filter @devflow/sdk build",
    "build:cli": "pnpm --filter @devflow/cli build",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md,yml,yaml}\"",
    "test": "pnpm -r test",
    "test:e2e": "pnpm -r test:e2e",
    "test:playwright": "playwright test",
    "test:playwright:ui": "playwright test --ui",
    "test:playwright:headed": "playwright test --headed",
    "test:playwright:debug": "playwright test --debug",
    "test:playwright:report": "playwright show-report",
    "playwright:install": "playwright install --with-deps chromium",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "infra:up": "docker-compose -f docker-compose.infra.yml up -d",
    "infra:down": "docker-compose -f docker-compose.infra.yml down",
    "infra:logs": "docker-compose -f docker-compose.infra.yml logs -f",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:migrate": "pnpm --filter @devflow/api prisma:migrate",
    "db:push": "pnpm --filter @devflow/api db:push",
    "db:seed": "pnpm --filter @devflow/api prisma:seed"
  },
  "devDependencies": {
    "@linear/sdk": "^29.0.0",
    "@playwright/test": "^1.57.0",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "glob": "^13.0.0",
    "playwright": "^1.57.0",
    "prettier": "^3.2.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
